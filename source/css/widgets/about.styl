#widget-about-root
    animation: slideInUp; 
    animation-duration: 3s

    #widget-about-content
        display: flex
        flex-direction: column
        align-items: center
        
        #widget-about-img
            width: 10em
            height: 10em
            box-sizing: border-box
            background-repeat: no-repeat
            background-position: center
            border-radius: 50%
            background-size: 90%
            background-color: white
            border: 2px solid #F6F6F6
            margin-bottom: 1.2em

        #widget-about-name
            text-align: center
            font-weight: 600
            margin-bottom: 0.5em

        #widget-about-social
            text-align: center
            #widget-social-item
                display: inline-block
                width: 2em
                height: 2em
