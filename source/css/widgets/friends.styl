#widget-friend-root
    animation: slideInUp; 
    animation-duration: 4s
    #widget-friend-content
        #widget-friend-info
            display: flex
            flex-direction: row
            align-items: center
            justify-content: center

            &:hover
                #widget-friend-img
                    animation: flip
                    animation-duration 2s
            
            #widget-friend-img
                width: 2em
                height: 2em
                background-size: 100%
                background-position: center
                background-repeat: no-repeat
                
            #widget-friend-name
                margin-left: 1em
                font-size: 1.7em
                a
                    color: var(--link-blue)

        #widget-friend-snap
            width: 100%
            height: 4em
            border-radius: .4em
            background-position: center
            background-repeat: no-repeat
            background-size: 70%
            margin-top: 1em